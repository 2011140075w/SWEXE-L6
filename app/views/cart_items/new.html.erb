<h2> カートに追加 </h2>

<%= form_for @cart_item, url: { action: :create } do |f| %>
    <p> 商品名: <%= @product.name %> </p>
    <p> 価格: <%= @product.price %> </p>
    <p>
        <%= f.label :qty, '数量' %>
        <%= f.number_field :qty %>
    </p>
    
    <%= f.hidden_field :product_id, value: @product.id %>
    <%= f.hidden_field :cart_id, value: current_cart.id %>
    
    <%= f.submit '商品を追加する' %>
<% end %>

<p> <%= link_to '商品一覧' , products_path %> </p>
<p> <%= link_to 'カートを見る' , cart_path(current_cart) %> </p>